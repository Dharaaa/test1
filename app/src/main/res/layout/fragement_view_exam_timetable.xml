<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@color/darkTextColor"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white_18dp"
                android:id="@+id/back_arrow"
                android:layout_gravity="center"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Exam Timetable"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/whiteTextColor"
                android:textSize="16dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:background="@color/colorGrey">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Exam Name:"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:id="@+id/exam_name"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:background="@color/colorGrey">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Batch:"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:id="@+id/batch_name"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:background="@color/colorGrey">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Section:"
                android:layout_weight="1"
                android:id="@+id/txt_section_name"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:id="@+id/section_name"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:background="@color/colorGrey">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Start Date:"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:id="@+id/start_date"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:background="@color/colorGrey">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="End Date:"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:id="@+id/end_Date"
                android:layout_gravity="center"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Data"
            android:layout_gravity="center"
            android:textColor="@color/danger"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/no_data"
            android:visibility="visible"/>
        <ListView
            android:id="@+id/list_exam_timetable"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">

        </ListView>
    </LinearLayout>



</LinearLayout>
