 <androidx.appcompat.widget.Toolbar android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorAccent"
    android:id="@+id/toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/whiteTextColor"
            android:layout_weight="1"
            android:id="@+id/toolbar_title"
            android:textSize="15sp"
            />

        <!-- <ImageView
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:src="@drawable/ic_notifications_none_white_18dp"
             />-->
        <LinearLayout
            android:id="@+id/ll_noti"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center"
                >

                <com.systrack.admission.helpers.FontAwesomeTextview
                    android:id="@+id/notification_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="&#xf0a2;"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="16sp"
                    android:visibility="gone"
                    />

                <RelativeLayout
                    android:id="@+id/test_layout"
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/noti_circle"
                    android:paddingTop="4dp" android:visibility="gone">

                    <TextView
                        android:id="@+id/count_notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="false"
                        android:layout_alignRight="@+id/notification_icon"
                        android:gravity="top|center"
                        android:textColor="@color/whiteTextColor"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>



        <!--<ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_view_module_white_18dp"
            android:id="@+id/quickdata"
            />-->

        <com.systrack.admission.helpers.FontAwesomeTextview
            android:id="@+id/quickdata"
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="&#xf009;"
            android:textColor="@color/whiteTextColor"
            android:textSize="18sp"
            android:visibility="gone" />



    </LinearLayout>
</androidx.appcompat.widget.Toolbar>

