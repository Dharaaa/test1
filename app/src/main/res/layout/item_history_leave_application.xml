<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="3dp"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >
                        <TextView
                            android:id="@+id/t1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Leave Date"
                            android:textStyle="bold"
                            android:layout_marginBottom="7dp"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dotted_line_verticle"
                            android:layerType="software" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="123456"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/leave_date"
                            android:padding="3dp"
                            android:layout_marginBottom="7dp"
                            android:textSize="12dp"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/dotted_line_horizontal"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/t2"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Leave Duration"
                            android:textStyle="bold"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dotted_line_verticle"
                            android:layerType="software" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manoj"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:id="@+id/leave_duration"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/dotted_line_horizontal"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/t3"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Leave Type"
                            android:textStyle="bold"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:layout_gravity="center"/>

                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dotted_line_verticle"
                            android:layerType="software" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1234567890"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:id="@+id/leave_type"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/dotted_line_horizontal"
                        android:orientation="vertical" >
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/t4"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Start Date"
                            android:textStyle="bold"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dotted_line_verticle"
                            android:layerType="software" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:id="@+id/start_date"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/dotted_line_horizontal"
                        android:orientation="vertical" >
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/t5"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:text="End Date"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dotted_line_verticle"
                            android:layerType="software" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:id="@+id/end_date"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/dotted_line_horizontal"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/t6"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:text="Days"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dotted_line_verticle"
                            android:layerType="software" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:id="@+id/days"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/dotted_line_horizontal"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/t8"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:text="Reason"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dotted_line_verticle"
                            android:layerType="software" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:id="@+id/reason"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/dotted_line_horizontal"
                        android:orientation="vertical" >
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/t7"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:text="Status"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dotted_line_verticle"
                            android:layerType="software" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:padding="5dp"
                            android:textColor="@color/whiteTextColor"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:id="@+id/status"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/dotted_line_horizontal"
                        android:orientation="vertical" >
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <com.systrack.admission.helpers.FontAwesomeTextview
                            android:id="@+id/view_leave_application"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="&#xf06e;"
                            android:textColor="#45b6af"
                            android:textSize="18sp" />

                    </LinearLayout>


                </LinearLayout>



            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
