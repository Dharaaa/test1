<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="3dp"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/t1"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:text="Exam Name"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dotted_line_verticle"
                            android:layerType="software" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="First Term"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/name"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/dotted_line_horizontal"
                        android:orientation="vertical" >
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/t2"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="Batch"
                            android:textStyle="bold"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dotted_line_verticle"
                            android:layerType="software" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Batch A"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="7dp"
                            android:layout_marginTop="7dp"
                            android:id="@+id/tv_batch"
                            android:layout_gravity="center"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/dotted_line_horizontal"
                        android:orientation="vertical" >
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/t3"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:text="Semester"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dotted_line_verticle"
                            android:layerType="software" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sem 1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:id="@+id/section"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/dotted_line_horizontal"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/t4"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:text="Publish Date"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dotted_line_verticle"
                            android:layerType="software" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="29/12/2020"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:id="@+id/tv_publish_date"
                            android:layout_gravity="center"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/dotted_line_horizontal"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/t5"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:text="Start Date"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dotted_line_verticle"
                            android:layerType="software" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="29/12/2020"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:id="@+id/tv_start_date"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/dotted_line_horizontal"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/t6"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:text="End Date"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dotted_line_verticle"
                            android:layerType="software" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="29/12/2020"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:id="@+id/tv_end_date"
                            android:layout_gravity="center"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp" android:visibility="visible">

                        <com.systrack.admission.helpers.FontAwesomeTextview
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/view_timetable"
                            android:text="&#xf073;"
                            android:textColor="#67809f"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textSize="18sp"/>

                        <View
                            android:layout_width="1dp" android:visibility="gone"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorGrey"/>


                        <com.systrack.admission.helpers.FontAwesomeTextview
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/view_marksheet"
                            android:text="&#xf15c;"
                            android:textStyle="bold"
                            android:textColor="@color/ripple_effect"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:textSize="18sp"/>

                    </LinearLayout>

                </LinearLayout>



            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
