<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/darkTextColor"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white_18dp"
                android:id="@+id/back_arrow"
                android:layout_gravity="center"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="View List of Batches"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:textColor="@color/whiteTextColor"
                android:textSize="16dp"
                android:layout_weight="1"/>


        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/whiteTextColor"
            app:cardUseCompatPadding="true"
            android:elevation="10dp"
            >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search here"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/searchView"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:windowSoftInputMode="stateHidden"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true">

        </EditText>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Data"
            android:layout_gravity="center"
            android:textColor="@color/danger"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/no_data"
            android:visibility="gone"/>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="visible">
        </ListView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_anchorGravity="bottom|center"
        tools:layout_editor_absoluteX="0dp">


        <com.systrack.admission.helpers.FontAwesomeTextview
            android:id="@+id/txt_prev"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:gravity="center_vertical|center"
            android:text="&#xf04a;"
            android:textColor="@color/whiteTextColor"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/display_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/whiteTextColor"
            android:gravity="center_vertical|center"
            android:text="10" />


        <com.systrack.admission.helpers.FontAwesomeTextview
            android:id="@+id/txt_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:gravity="center_vertical|center"
            android:text="&#xf04e;"
            android:textColor="@color/whiteTextColor"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>
